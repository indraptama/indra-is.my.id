---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
---
<!DOCTYPE html>
<html lang="id">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main class="absolute top-0 left-0 bottom-0 right-0 flex items-center justify-center">

			<div class="flex flex-col-reverse lg:flex-row items-center justify-center gap-8">
				<div class="text-center lg:text-right">
					<h1 class="text-2xl lg:text-5xl mb-4"><span class="inline-block bg-slate-800 text-white px-4 py-2">
						INDRA PRATAMA PUTRA, SH, MKn
					  </span></h1>
					<p class="text-xl lg:text-3xl"><span class="inline-block bg-slate-800 text-white px-4 py-2">
					Kabupaten Garut
					</span></p>
				</div>
				<div class="w-40">
					<img src="/logo.svg" alt="">
				</div>
			</div>
			
		</main>
		<Footer />
	</body>
</html>
